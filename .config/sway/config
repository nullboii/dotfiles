#  ______        ___ __   __
# / ___\ \      / / \\ \ / /
# \___ \\ \ /\ / / _ \\ V / 
#  ___) |\ V  V / ___ \| |  
# |____/  \_/\_/_/   \_\_|  


# VARS
    set $mod Mod4

    set $left h
    set $down j
    set $up k
    set $right l

    set $term alacritty
    set $browser qutebrowser
    set $fileman alacritty -e nnn -e 

    set $menu wofi --show run

# DISPLAY
    output * bg ~/imgs/walls/cute-poison.png fill

    # LOCK
    exec /home/nullboi/.config/sway/scripts/sleep.sh

    # FILTER
    exec wlsunset -t 2500 -S 07:00 -s 20:00

    # STYLE
    default_border pixel 3

# INPUT
    input type:touchpad {
        dwt disabled
        tap disabled
        natural_scroll disabled
        middle_emulation enabled
    }
    input 1267:1048:ELAN_Touchscreen {
        events disabled
    }
    input 6940:6958:Corsair_Corsair_Gaming_M65_Pro_RGB_Mouse {
        accel_profile flat
    }

# BINDS
    # RUN
    bindsym $mod+Return exec $term
    bindsym $mod+o exec $browser

    bindsym $mod+Shift+v exec kitty vimpc

    # KILL
    bindsym $mod+Shift+q kill

    # LAUNCHER
    bindsym $mod+d exec $menu

    # VOLUME
    bindsym XF86AudioRaiseVolume exec ~/.config/sway/scripts/volume.sh up
    bindsym XF86AudioLowerVolume exec ~/.config/sway/scripts/volume.sh down
    bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

    bindsym $mod+Shift+g exec ~/docs/scripts/bt_toggle

    # BRIGHTNESS
    bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
    bindsym XF86MonBrightnessUp exec brightnessctl set +10%

    # DRAG FLOAT
    floating_modifier $mod normal

    # RELOAD
    bindsym $mod+Shift+c reload

    # EXIT SWAY
    bindsym $mod+Shift+e exec swaynag -t warning -m 'Do you really want to exit sway?' -B 'Yes, exit sway' 'swaymsg exit'

    # STATUS
    bindsym $mod+q exec makoctl dismiss && notify-send "$(acpi | cut -c 8-)"
    bindsym $mod+t exec makoctl dismiss && notify-send "$(date)"

    # IDLE TOGGLE
    bindsym XF86Explorer exec /home/nullboi/docs/scripts/idle_toggle.sh

# FOCUS
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    # MOVE FOCUSED WINDOW
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right

    # FLOAT/TILE FOCUS
    bindsym $mod+space focus mode_toggle

    # FOCUS PARENT
    bindsym $mod+a focus parent

# WORKSPACES
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5

    # MOVE FOCUS TO WORKSPACE
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5

# LAYOUT
    # TOGGLE SPLIT
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # SWITCH LAYOUTS
    # bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+f fullscreen

    # TOGGLE FLOAT
    bindsym $mod+Shift+space floating toggle

    ## RESIZE
    mode "resize" {
        # GROW/SHRINK
        bindsym $left resize shrink width 10px
        bindsym $down resize grow height 10px
        bindsym $up resize shrink height 10px
        bindsym $right resize grow width 10px

        # DEFAULT MODE
        bindsym Return mode "default"
        bindsym Escape mode "default"
    }
    bindsym $mod+r mode "resize"

include /etc/sway/config.d/*
